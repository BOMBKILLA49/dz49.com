<body>
    <div class="form-container">
        <h2 class="text-center mb-4">Reservation Form</h2>
        <form>
            <!-- Original Check In Field (for context) -->
            <div class="form-group">
                <label for="checkin_date">Check In Date</label>
                <input type="text" id="checkin_date" name="checkin_date" class="form-control" placeholder="Select date">
            </div>

            <!-- Replaced Check Out with Date and Time Fields -->
            <div class="form-group">
                <label for="checkout_date">Check Out Date</label>
                <input type="text" id="checkout_date" name="checkout_date" class="form-control" placeholder="Select date">
            </div>
            <div class="form-group">
                <label for="checkout_time">Check Out Time</label>
                <input type="text" id="checkout_time" name="checkout_time" class="form-control" placeholder="Select time">
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <!-- jQuery (used by many ThemeForest templates) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        $(document).ready(function() {
            // Initialize Flatpickr for Check In Date
            $("#checkin_date").flatpickr({
                dateFormat: "Y-m-d", // e.g., 2025-02-22
                minDate: "today" // Prevents past dates
            });

            // Initialize Flatpickr for Check Out Date
            $("#checkout_date").flatpickr({
                dateFormat: "Y-m-d", // e.g., 2025-02-22
                minDate: "today" // Prevents past dates
            });

            // Initialize Flatpickr for Check Out Time
            $("#checkout_time").flatpickr({
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i", // 24-hour format, e.g., 14:30
                time_24hr: true
            });

            // Optional: Log form data on submit for testing
            $("form").on("submit", function(e) {
                e.preventDefault(); // Prevent actual submission
                console.log({
                    checkin_date: $("#checkin_date").val(),
                    checkout_date: $("#checkout_date").val(),
                    checkout_time: $("#checkout_time").val()
                });
                alert("Form submitted! Check console for values.");
            });
        });
    </script>
</body>
